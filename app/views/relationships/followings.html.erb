<h2>Followings Users</h2>
    <% if @users.exists? %>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>image</th>
            <th>name</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <th></th>
              <th><%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback:'img/no_image.jpg', size: "40x40" %></th>
              <th><%= user.name %></th>
              <td>フォロー数:<%= user.followings.count%></td>
              <td>フォロワー数:<%= user.followers.count%></td>
              <td><%= link_to"Show",user_path(user) %></td>
            </tr>
          <% end %>
        </tbody>
      </table  
    <% else %>
      <p>ユーザーはいません</p>
    <% end %>
