
  <%= render 'books/book_user_info',user: @user,book: @book %>
    <div class="col-md-8 offset-md-1">
     <h2>Books</h2>
     <table class="table table-hover table-inverse">
      <thead>
       <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
       </tr>
      </thead>
      <tbody>
       <% @books.each do |book| %>
         <tr>
          <th><%= link_to user_path(book.id) do %>
               <%= attachment_image_tag book.user, :profile_image, format: 'jpeg', fallback:'img/no_image.jpg', size: "40x40" %>
              <% end %></th>
          <th><%= link_to book.title,book_path(book) %></th>
          <th><%= book.body %></th>
        <% end %>
       </tr>
      </tbody>
     </table>
    </div>
   </div>
</div>